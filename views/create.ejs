<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>

    <div class="container"><h2>Add a New Blog</h2></div>

    <form action="/blogs" method="POST" class="container" >
        <label for="author" class="form-label">Author</label>
        <input type="text" name="author"  class="form-control" required>
        <label for="title" class=" mt-3 form-label">Title</label>
        <input type="text" name="title"  class="form-control" required>
        <label for="snippet" class="form-label">Snippet</label>
        <input type="text" name="snippet"  class="form-control" required>
        <label for="body" class="form-label">Body</label>
        <textarea name="body"  class="form-control" cols="30" rows="10" required></textarea>
       <button class="mt-3 btn btn-primary">Submit</button>
    </form>

    <%- include('./partials/footer.ejs') %>
</body>
</html>